{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts",
    "src/**/*.js"
  ]
}